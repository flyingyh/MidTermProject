<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:fadingEdgeLength="@null"
        android:scrollbars="none"
        android:background="#555"
        android:id="@+id/hsv">
        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#33b5e5"
            android:paddingTop="7dp"
            >
            <RadioGroup
                android:id="@+id/rg"
                android:layout_width="fill_parent"
                android:layout_height="55dp"
                android:orientation="horizontal"
                >
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:button="@null"
                    android:text="文章首页"
                    android:id="@+id/btn"
                    android:paddingLeft="10dp"
                    />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:button="@null"
                    android:text="新闻"
                    android:id="@+id/btn1"
                    android:paddingLeft="10dp"
                    />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:button="@null"
                    android:text="游戏杂谈"
                    android:id="@+id/btn2"
                    android:paddingLeft="10dp"
                    />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:button="@null"
                    android:text="硬件信息"
                    android:id="@+id/btn3"
                    android:paddingLeft="10dp"
                    />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:button="@null"
                    android:text="游戏前瞻"
                    android:id="@+id/btn4"
                    android:paddingLeft="10dp"
                    />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:button="@null"
                    android:text="游戏评测"
                    android:id="@+id/btn5"
                    android:paddingLeft="10dp"
                    />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:button="@null"
                    android:text="原创精品"
                    android:id="@+id/btn6"
                    android:paddingLeft="10dp"
                    />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:button="@null"
                    android:text="游戏盘点"
                    android:id="@+id/btn7"
                    android:paddingLeft="10dp"
                    />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:button="@null"
                    android:text="时事焦点"
                    android:id="@+id/btn8"
                    android:paddingLeft="10dp"
                    />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:button="@null"
                    android:text="攻略战略"
                    android:id="@+id/btn9"
                    android:paddingLeft="10dp"
                    />
            </RadioGroup>
        </RelativeLayout>
    </HorizontalScrollView>

    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/vp_article" >
    </android.support.v4.view.ViewPager>

</LinearLayout>